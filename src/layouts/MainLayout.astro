<style>
  header {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 1rem;
    justify-content: space-between;
  }
  main {
    flex-grow: 1;
    overflow: auto; /* Add this to handle content overflow within main */
  }
  nav {
    width: auto;
  }
  .title--layer {
    width: 20%;
    display: flex;
    justify-content: center;
  }

  @media (max-width: 1000px) {
    header {
      flex-direction: column;
      gap: 1rem;
    }
    .title--layer {
      width: 100%;
    }
  }
</style>
