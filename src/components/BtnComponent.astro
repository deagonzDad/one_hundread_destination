---
interface Props {
    href:string;
    text:string;
}
const {href, text} = Astro.props;
---
    <a class="btn--button" href={href} ><span class="btn--text">{text}</span></a>


<style>
    .btn--button{
        display: flex;
        border-radius: 10rem;
        border-width: 0.1rem;
        border-color: white;
        padding: 0.2rem 3rem;
        text-decoration: none;
        color: white;
        border-style:solid;
        align-items: center;
        vertical-align:middle;
    }
    .btn--text {
        font-size: 3rem;
    }
</style>