---
interface Props{
    x:number
    y:number
    text:string
}
const {x, y, text} = Astro.props;
---

<rect 
    x={x} 
    y={y} 
    width="100" 
    height="30" 
    fill="transparent" 
    cursor="pointer" 
    rx="10" 
    ry="10" 
    stroke="white" 
    stroke-width="2"
/>
<text 
    x={x+50} 
    y={y+15}
    text-anchor="middle" 
    fill="white"
>
    {text}
</text>