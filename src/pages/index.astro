---

<Layout title="main page">
  <body>
    <div 
        class="img--background"
        transition:name="bgTransition"
        transition:animate="slide"
    >
        <div 
        class="main--block"
        transition:name="fadeTransition"
        transition:animate="slide"
        >
            <h1 class="title--font">
                <span class="hundred--style"
                >100</span> 
                <span class="title--text">
                    DREAM<br/>DESTINATIONS
                </span>
            </h1>
            <div class="btn--redirection">
                <BtnComponent href="/worldMap/" text="Start Exploring"/>
            </div>
        </div>
    </div>
  </body>
</Layout>

<style>
    .img--background{
        position: relative;
        background-image: url("/src/assets/svg/FullMap.svg");
        background-size: 185%;
        background-position: center;
        background-repeat: no-repeat;
        overflow: hidden;
    }
    .main--block{
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: rgb(0, 0, 0, 0.5);
        flex-direction: column;
    }
    .title--font {
        display: flex; 
        align-items: center; 
        font-size:10rem;
        color:white;
        font-stretch: expanded;
        letter-spacing:normal;
        line-height:10rem;
    }
    .hundred--style {
        font-size: 2.5em;
        padding-top: 0.1em;
        padding-right: 0.1em;
        display: flex;
        align-items: center;
        justify-items: center;
    }
    
    @media screen and (max-width:800px){
        .title--font{
            font-size:10rem
        }
    }
    @media screen and (max-width:500px){
        .title--font{
            font-size:3rem;
            line-height:3rem;
        }
    }
</style>

